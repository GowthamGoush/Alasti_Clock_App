<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.BlankFragment3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#211044">

        <ImageButton
            android:id="@+id/stopWatch"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/splitList"
            android:layout_alignStart="@+id/counter"
            android:layout_marginStart="75dp"
            android:layout_marginTop="50dp"
            android:background="@null"
            android:src="@drawable/ic_lap"
            />

        <ImageButton
            android:id="@+id/startWatch"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/splitList"
            android:layout_alignEnd="@+id/counter"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="75dp"
            android:background="@null"
            android:src="@drawable/ic_start" />

        <Chronometer
            android:id="@+id/counter"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/orbitron_medium"
            android:gravity="center"
            android:textColor="#F0EDF6"
            android:textSize="50dp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/splitList"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:scrollbars="vertical"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/counter"
            android:layout_marginTop="-10dp"
            android:smoothScrollbar="true"
            />

    </RelativeLayout>

</FrameLayout>